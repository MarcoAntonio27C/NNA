@{
    ViewData["Title"] = "Agente Investigador";
}

<div class="container   mx-auto ">
    <div class="rounded-lg mt-3 text-center text-2xl bg-yellow-600 text-white font-bold py-5">
        DENUNCIAS
    </div>
    <div class=" mt-9 overflow-x-auto relative shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="py-3 px-6">
                        Folio
                    </th>
                    <th scope="col" class="py-3 px-6">
                        Denuncia Recibida
                    </th>
                    <th scope="col" class="py-3 px-6">
                        Tipo Denuncia
                    </th>
                    <th scope="col" class="py-3 px-6">
                        Nombre
                    </th>
                    <th scope="col" class="py-3 px-6">
                        Edad
                    </th>
                    <th scope="col" class="py-3 px-6">
                        Visualizar
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                    <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        00000001
                    </th>
                    <td class="py-4 px-6">
                        @DateTime.Now.ToString()
                    </td>
                    <td class="py-4 px-6">
                        Niñas y Niños
                    </td>
                    <td class="py-4 px-6">
                        Marco Antonio Cantero Contreras
                    </td>
                    <td class="py-4 px-6">
                        7 años
                    </td>
                    <td class="py-4 px-6">
                        <a asp-controller="Denuncia" asp-action="Index">Ver</a>
                    </td>
                </tr>
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                    <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        00000002
                    </th>
                    <td class="py-4 px-6">
                        @DateTime.Now.ToString()
                    </td>
                    <td class="py-4 px-6">
                        Adolescentes
                    </td>
                    <td class="py-4 px-6">
                        Pedro Angel
                    </td>
                    <td class="py-4 px-6">
                        15 años
                    </td>
                    <td class="py-4 px-6">
                        <a href="#">Ver</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
